@model LoginViewModel

@{ 
    ViewBag.Title = "Login";
    Layout = "_HomeLayout.cshtml";
}

<div class="container py-24">
    <div class="flex justify-center">
        <div class="w-2/4 bg-white p-6 shadow-md">
            <form action="">
                <div class="mb-4">
                    <label asp-for="@Model.Email" class="label"></label>
                    <input type="email" asp-for="@Model.Email" class="input w-full" />
                </div>
                <div class="mb-4">
                    <label asp-for="@Model.Password" class="label"></label>
                    <input asp-for="@Model.Password" class="input w-full" />
                </div>
                <div class="mb-4">
                    <label asp-for="@Model.RememberMe" class="label">Label</label>
                    <input asp-for="@Model.RememberMe" class="input w-full" />
                </div>
                <div class="flex items-center justify-between">
                    <div>
                        Don't have an account?
                        <a href="" class="hover:underline text-blue-600">Register</a>
                    </div>
                    <div>
                        <button type="submit" class="btn btn-primary">Login</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>