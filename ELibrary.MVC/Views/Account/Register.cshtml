@model RegisterViewModel
@{
    Layout = "_HomeLayout.cshtml";
    ViewBag.Title = "Register";
}
<div class="container py-24">
    <div class="flex justify-center">
        <div class="w-2/4 bg-white p-6 shadow-md">
            <form method="post" asp-controller="" asp-action="">
                <div asp-validation-summary="ModelOnly"></div>

                <div class="mb-4">
                    <label asp-for="FirstName" class="label"></label>
                    <input asp-for="FirstName" type="text" class="input w-full" />
                    <span asp-validation-for="FirstName" class="text-red-600 italic text-sm"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="LastName" class="label"></label>
                    <input asp-for="LastName" type="text" class="input w-full" />
                    <span asp-validation-for="LastName" class="text-red-600 italic text-sm"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Email" class="label"></label>
                    <input asp-for="Email" type="text" class="input w-full" />
                    <span asp-validation-for="Email" class="text-red-600 italic text-sm"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Password" class="label"></label>
                    <input asp-for="Password" type="text" class="input w-full" />
                    <span asp-validation-for="Password" class="text-red-600 italic text-sm"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="ConfirmPassword" class="label"></label>
                    <input asp-for="ConfirmPassword" type="text" class="input w-full" />
                    <span asp-validation-for="ConfirmPassword" class="text-red-600 italic text-sm"></span>
                </div>

                <div class="flex items-center justify-between">
                    <div>
                        Don't have an account? Click
                        <a href="" class="hover:underline text-blue-600">here</a>
                    </div>
                    <div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>







