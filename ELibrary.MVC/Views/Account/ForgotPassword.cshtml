@model ForgotPasswordModel
@{
    Layout = "_HomeLayout";
    ViewBag.Title = "Forgot Password";
}
<div class="container py-24">
    <div class="flex justify-center">
        <div class="w-2/4 bg-white p-6 shadow-2xl border-t-8 border-blue-500">
            <div class="py-4">
                <h2 class="text-center font-bold text-3xl antialiased tracking-wide">Forgot Password</h2>
            </div>
            <form asp-controller="Account" asp-action="ForgotPassword">
                <div class="mb-4">
                    <label asp-for="@Model.Email" class="label">Email</label>
                    <input type="email" asp-for="@Model.Email" class="w-full input" />
                </div>

                <div class="flex items-center justify-between">
                    <div>
                        <button type="submit" class="btn btn-primary">Forgot Password</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
